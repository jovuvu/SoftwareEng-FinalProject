%h1 Listing users

%table#users
  %thead
    %tr
      %th User First Name 
      %th User Last Name
      %th User Email
      %th User Date of Birth
      %th User Profile
      %th User News Feed
      %th Delete?
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name_first
        %td= user.name_last
        %td= user.email
        %td= user.dob
        %td= link_to "Profile", user_path(user)
        %td= link_to "News Feed", user_posts_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

